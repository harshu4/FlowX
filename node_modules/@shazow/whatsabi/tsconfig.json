{
  "compilerOptions": {
    "outDir": "./lib/",
    "rootDir": "./src.ts",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2021"
  },
  "include": [
    "./src.ts/*.ts"
  ],
  "exclude": [ ]
}
